<UserControl x:Class="Widget.Clock.ClockWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:weatherResources="clr-namespace:Widget.Weather.WeatherResources" FontWeight="Light"
             FontFamily="/Mosaic.Base;component/Fonts/#Segoe WP"
             >
    <UserControl.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
            <GradientStop Color="Green" Offset="0"/>
            <GradientStop Color="#007200" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <!--<UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Name="OptionsItem" Header="{x:Static weatherResources:Resources.OptionsItem}" Click="OptionsItemClick"/>
        </ContextMenu>
    </UserControl.ContextMenu>-->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Name="BatteryIcon" Width="12" Source="/Widget;component/Clock\ClockResources\batt10.png" Margin="0,24,15,0"/>
        <TextBlock Name="Time" Text="02:56" Foreground="White" FontSize="56"/>
        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
            <TextBlock Name="Day" Text="Thursday" Foreground="White" FontSize="24"/>
            <TextBlock Name="Date" Text="June 01" Foreground="White" FontSize="20"/>
        </StackPanel>
    </StackPanel>
</UserControl>
