                ToolTip="{x:Static resources:TooltipResources.RefreshCustomer}"
                Command="{Binding RefreshCommand}" />
        </Grid>

        <StackPanel Grid.Row="1" Margin="8" Orientation="Horizontal">
            <Label
                Margin="8,0,0,0"
                Content="{x:Static  resources:LabelResources.Name}" />
            <TextBox 
                Margin="8,0,0,0"
                Width="200"
                 Height="22"
                Text="{Binding SearchName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label 
                Margin="8,0,0,0"
                Content="{x:Static  resources:LabelResources.CallDate}" />
            <DatePicker
                Margin="8,0,0,0"
                Height="22"
                SelectedDate="{Binding SearchDateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Width="150" />
            <Button
                Margin="8,0,0,0"
                Content="Search"
                Width="120"
                Command="{Binding SearchCommand}"/>
        </StackPanel>
        <Grid Grid.Row="2"
              Margin="8,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <controls:ProgressIndicator ProgressColour="{StaticResource AccentColorBlueBrush}"
                                        Height="6"
                                        Width="600" Margin="0,0,0,10"
                                        Visibility="{Binding Path=DataContext.ShowProgressBar, ElementName=callerLogPage, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <ListView Grid.Row="1" 
                      ItemsSource="{Binding Entity.ObservableList}" 
                      BorderThickness="0"
                      view:VHAttachedProperties.OnDoubleClick="{Binding EditCommand}">
                <ListView.Resources>
                    <helper:BindingProxy x:Key="proxy" Data="{Binding DataContext, ElementName=callerLogPage}" />
                    <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource DefaultListViewItemStyle}">
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu>
                                    <MenuItem Header="{x:Static resources:TooltipResources.Edit}"  Command="{Binding Source={StaticResource proxy}, Path=Data.EditCommand}"/>
                                    <MenuItem Header="{x:Static resources:TooltipResources.Delete}" Command="{Binding Source={StaticResource proxy}, Path=Data.DeleteCommand}"/>
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="{x:Static resources:LabelResources.CallerName}" DisplayMemberBinding="{Binding Name}" Width="180"/>
                        <GridViewColumn Header="{x:Static resources:LabelResources.CallDate}" DisplayMemberBinding="{Binding CallDate, StringFormat={}{0:dddd, MMMM, dd, yyyy}}" Width="240"/>
                        <GridViewColumn Header="{x:Static resources:LabelResources.CallTime}" DisplayMemberBinding="{Binding CallTime, StringFormat=t}" Width="100"/>
                        <GridViewColumn Header="{x:Static resources:LabelResources.PhoneNumber}" DisplayMemberBinding="{Binding CallContactNumber}" Width="180"/>
                        <GridViewColumn Header="{x:Static resources:LabelResources.Comment}" DisplayMemberBinding="{Binding Comment}"  Width="250" />
                    </GridView>
                    
                </ListView.View>
            </ListView>
        </Grid>

        <Rectangle
            Grid.RowSpan="3"
            Opacity="0.1"
            Fill="{StaticResource AccentColorLightBlueBrush}"
            Visibility="{Binding ChildViewModel, Converter={userControls:NullObjectToVisibiltyConverter}}" />
