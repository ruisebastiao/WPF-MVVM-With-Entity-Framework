                <DataGrid
                    Grid.Row="1"
                    ItemsSource="{Binding Entity.ObservableList}"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    SelectionMode="Extended"
                    view:VHAttachedProperties.OnDoubleClick="{Binding CustomerDoubleClick}">
                    <DataGrid.Resources>
                        <helper:BindingProxy x:Key="proxy" Data="{Binding DataContext, ElementName=customerPage}" />
                    </DataGrid.Resources>

                    <DataGrid.ItemContainerStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="IsSelected" Value="{Binding Path=IsSelected, Mode=TwoWay}" />
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="{x:Static resources:TooltipResources.Edit}"  Command="{Binding Source={StaticResource proxy}, Path=Data.EditCommand}"/>
                                        <MenuItem Header="{x:Static resources:TooltipResources.Delete}" Command="{Binding Source={StaticResource proxy}, Path=Data.DeleteCommand}"/>
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.ItemContainerStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            MinWidth="140"
                            Header="{x:Static  resources:LabelResources.GridFormattedName}"
                            Binding="{Binding FormattedName}" ElementStyle="{StaticResource DataGridTextStyle}" />
                        <DataGridTextColumn
                            MinWidth="50"
                            Header="{x:Static  resources:LabelResources.GridGender}" Binding="{Binding Gender}"
                            ElementStyle="{StaticResource DataGridTextStyle}" />
                        <DataGridTextColumn
                            MinWidth="250"
                            Header="{x:Static  resources:LabelResources.GridAddress}"
                            Binding="{Binding FirstOrDefaultAddress.Address}"
                            ElementStyle="{StaticResource DataGridTextStyle}" >
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="ToolTip" Value="{Binding ConcatenatedAddress}" />
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            MinWidth="100"
                            Header="{x:Static  resources:LabelResources.GridPhoneNumber}"
                            Binding="{Binding ConcatenatedPhone}"
                            ElementStyle="{StaticResource DataGridTextStyle}" >
                            <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                    <Setter Property="ToolTip" Value="{Binding ConcatenatedPhone}" />
                            </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            MinWidth="150"
                            Header="{x:Static  resources:LabelResources.GridEmail}"
                            Binding="{Binding Email}" ElementStyle="{StaticResource DataGridTextStyle}" />
                        <DataGridTextColumn
                            MinWidth="60"
                            Header="{x:Static  resources:LabelResources.GridDOB}"
                            Binding="{Binding DOB, StringFormat=d}" ElementStyle="{StaticResource DataGridTextStyle}" />

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Rectangle
                Grid.RowSpan="3"
                Opacity="0.1"
                Fill="{StaticResource AccentColorLightBlueBrush}"
                Visibility="{Binding ChildViewModel, Converter={converters:NullObjectToVisibiltyConverter}}" />
            <userControls:ModalDailogWindow
                Grid.RowSpan="3"
                view:VHAttachedProperties.ModelDialogContent="{Binding ChildViewModel}"
                ViewMode="{Binding ChildViewModel.ViewMode}"
                IsActive="{Binding ChildViewModel.IsActive}"
                Visibility="{Binding ChildViewModel, Converter={converters:NullObjectToVisibiltyConverter}}" />
        </Grid>
    </AdornerDecorator>
</UserControl>
